<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/rl_image"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/lmi_avatar"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:contentDescription="@string/app_name"
        tools:background="#fff0f0f0"/>

    <LinearLayout
        android:id="@+id/ll"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lmi_avatar"
        android:layout_alignTop="@+id/lmi_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView style="@style/AppTheme.Label.Title"
            android:id="@+id/lmi_title"
            android:minWidth="200dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/lmi_grade"
            android:minWidth="50dp"
            android:layout_marginTop="@dimen/padding_common_d"
            android:textColor="@android:color/holo_orange_dark"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/lmi_describe"
            android:minWidth="100dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/lmi_actor"
            android:minWidth="100dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
    </LinearLayout>

</RelativeLayout>

